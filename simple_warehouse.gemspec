lib = File.expand_path("../lib", __FILE__)
$LOAD_PATH.unshift(lib) unless $LOAD_PATH.include?(lib)
require "simple_warehouse/version"

Gem::Specification.new do |spec|
  spec.name          = "simple_warehouse"
  spec.version       = SimpleWarehouse::VERSION
  spec.authors       = ["Javier Gonel"]
  spec.email         = ["bolibic@gmail.com"]

  spec.summary       = %q{ClickMechanic ruby assignment.}
  spec.description   = %q{CLI app to handle an in memory warehouse.}
  spec.homepage      = "https://github.com."

  # Prevent pushing this gem to RubyGems.org. To allow pushes either set the 'allowed_push_host'
